set -g status-style "bg=#020712,fg=#F8FFFF"

set -g status-left-length 40
set -g status-right-length 120

set -g status-left "#[fg=#00ECC6] ‚óè CoolNight #[default]"
set -g status-right "#[fg=#178FFF]%Y-%m-%d #[fg=#7A5CFF]%H:%M:%S"

